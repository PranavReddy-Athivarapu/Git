    <input asp-for="userName" required /><br /><br />

    <label asp-for="email">Email:</label><br />
    <input asp-for="email" type="email" required /><br /><br />

    <label asp-for="password">Password:</label><br />
    <input asp-for="password" type="password" required /><br /><br />

    <label asp-for="phoneNumber">Phone Number:</label><br />
    <input asp-for="phoneNumber" required /><br /><br />

    <label asp-for="address">Address:</label><br />
    <textarea asp-for="address" required></textarea><br /><br />

    <label><input asp-for="isAdmin" /> Is Admin</label><br /><br />

    <button type="submit">Submit</button>
</form>

