<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Admin Dashboard </title>
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header class="logo-container">
        <h1><a asp-controller="Home" asp-action="Dashboard" style="text-decoration:none; color:inherit;">Contoso Admin</a></h1>
    </header>

    <nav class="navbar">
        <div class="nav-left">
            <div class="dropdown">
                <button class="btn">User</button>
                <div class="dropdown-content">
                    <a asp-controller="User" asp-action="AddUser">Add User</a>
                    <a asp-controller="User" asp-action="ViewUser">View All Users</a>
                </div>
            </div>
            <div class="dropdown">
                <button class="btn">Medicine</button>
                <div class="dropdown-content">
                    <a asp-controller="Medicine" asp-action="AddMedicine">Add Medicine</a>
                    <a asp-controller="Medicine" asp-action="ViewMedicine">View Medicine</a>
                    <a asp-controller="Medicine" asp-action="ManageStock">View Stock</a>
                </div>
            </div>
        </div>

        <div class="search-bar">
            <input type="text" placeholder="Search..." />
        </div>

        <div class="nav-right">
            <button class="btn" onclick="location.href='/Home/Profile'">Profile</button>
            <button class="btn" onclick="location.href='#'">Logout</button>
        </div>
    </nav>

    <main class="dashboard">
        @RenderBody()
    </main>
    
    @RenderSection("Scripts", required: false) 
</body>
</html>
