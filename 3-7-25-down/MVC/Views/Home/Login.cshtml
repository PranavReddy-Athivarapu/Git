@using OnlinePharmacyAppMVC.DTO
@model LoginViewModel
<h2>Login</h2>
<form asp-action="Login" method="post">
    <div>
        <label>Email:</label>
        <input asp-for="Email" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div>
        <label>Password:</label>
        <input asp-for="Password" type="password" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <div>
        
        
        <label>Enter Captcha:</label>
        <input asp-for="CaptchaCode" />
        <span asp-validation-for="CaptchaCode" class="text-danger"></span><br />

        @* <img src="/Home/GenerateCaptcha" alt="Captcha Image" style="margin-top:5px;" /> *@
        <img id="captchaImage" src="/Home/GenerateCaptcha" alt="Captcha Image" style="margin-top:5px;" />
        <button type="button" class="btn btn-link" onclick="refreshCaptcha()"> Refresh</button>

    </div>
    <button type="submit">Login</button>

    <div style="color:red;">
        @ViewBag.Error
    </div>
</form>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")

    <script>
        function refreshCaptcha() {
            const img = document.getElementById("captchaImage");
            img.src = "/Home/GenerateCaptcha?ts=" + new Date().getTime();
        }
    </script>
}





